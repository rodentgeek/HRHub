  <div class="form-group">
    <label class="control-label col-sm-2" for="job">Job Title:</label>
    <div class="col-sm-10"> 
      <input type="text" class="form-control" name="employee[job]" id="job">
    </div>
  </div>
  
    <div class="form-group">
    <label class="control-label col-sm-2" for="job">SSN:</label>
    <div class="col-sm-10"> 
      <input type="text" class="form-control" name="employee[ssn]" id="ssn">
    </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-sm-2" for="job">Phone:</label>
    <div class="col-sm-10"> 
      <input type="number" class="form-control" name="employee[cNumber]" id="cNumber">
    </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-sm-2" for="job">Salary (yr):</label>
