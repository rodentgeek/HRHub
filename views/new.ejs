<% include partials/header2 %>

<h2>Onboard Employee</h2>

<form class="form-horizontal" method="post" action="/employees">
  
  <div class="form-group">
    <label class="control-label col-sm-2" for="firstName">First Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="employee[firstName]" id="firstName">
    </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-sm-2" for="lastName">Last Name:</label>
    <div class="col-sm-10"> 
      <input type="text" class="form-control" name="employee[lastName]" id="lastName">
    </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Email:</label>
    <div class="col-sm-10"> 
      <input type="email" class="form-control"name="employee[email]" id="email">
    </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-sm-2" for="address">Address:</label>
    <div class="col-sm-10"> 
      <input type="text" class="form-control" name="employee[address]" id="address" placeholder="Street number and street name only">
    </div>
  </div>
  
  <div class="form-group">
    <label class="control-label col-sm-2" for="city">City:</label>
